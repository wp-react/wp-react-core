{
  "name": "wp-react-core",
  "version": "1.0.0",
  "description": "Wordpress react backend for native and webclients",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "fixcode": "standard --fix",
    "test:coverage": "jest --coverage",
    "precommit": "npm run git-hook",
    "prepush": "npm run git-hook",
    "git-hook": "npm run fixcode && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wp-react/wp-react-core.git"
  },
  "keywords": [
    "wordpress",
    "wp",
    "react",
    "redux",
    "redux-saga",
    "reduxsauce"
  ],
  "author": "Brendon A. Smith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wp-react/wp-react-core/issues"
  },
  "homepage": "https://github.com/wp-react/wp-react-core#readme",
  "dependencies": {
    "apisauce": "^0.14.3",
    "babel-eslint": "^8.2.2",
    "babel-preset-react-native": "^4.0.0",
    "ramda": "^0.25.0",
    "react-native-config": "^0.11.5",
    "react-native-dotenv": "^0.1.1",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "reduxsauce": "^0.7.0",
    "seamless-immutable": "^7.1.3"
  },
  "devDependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-register": "^6.26.0",
    "jest": "^22.4.2",
    "snazzy": "^7.1.1",
    "standard": "^11.0.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/doc",
      "/fixtures/**/*.js",
      "/__tests__/**/*.test.js"
    ]
  }
}
